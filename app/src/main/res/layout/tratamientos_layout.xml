<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="0.1dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMascotaTratamientoText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:textSize="13dp"
            android:text="MASCOTA:" />

        <TextView
            android:id="@+id/textViewMascotaTratamiento"
            android:layout_width="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDescripcionTratamientoText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:text="TRATAMIENTO:"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textViewDescripcionTratamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFechaTratamientoText"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lemonmilk"
            android:textSize="13dp"
            android:text="FECHA: " />

        <TextView
            android:id="@+id/textViewFechaTratamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSeparador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂"
        android:textSize="14sp" />

</LinearLayout>