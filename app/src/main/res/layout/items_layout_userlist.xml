<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="0.1dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:text="ID Cliente: "
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textViewIdClienteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lemonmilk"
            android:textSize="13dp"
            android:text="Nombre: " />

        <TextView
            android:id="@+id/textViewNombreItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDNI"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lemonmilk"
            android:textSize="13dp"
            android:text="DNI: " />

        <TextView
            android:id="@+id/textViewDNIItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lemonmilk"
            android:textSize="13dp"
            android:text="Teléfono: " />

        <TextView
            android:id="@+id/textViewTelefonoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lemonmilk"
            android:textSize="13dp"
            android:text="Dirección: " />

        <TextView
            android:id="@+id/textViewDireccionItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilklight"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂"
        android:textSize="14sp" />

</LinearLayout>
